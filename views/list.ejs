<%- include ('header.ejs'); -%>

    <div class="box" id="heading">
      <h1><%= title %></h1>
    </div>

    <div class="box">
      <% for(let i=0; i <items.length; i++){ %>
      <div class="item">
            <input type="checkbox">
            <p><%= items[i] %> </p>
          </div> 
          <% } %>
        <form action="/" method="POST" class="item">
          <input type="text" name="todo" placeholder="New Item" />
          <button type="submit" name="list" value=<%= title %>>+</button>
        </form>
    </div>

    <%- include ('footer.ejs'); -%>