<%- include ('header.ejs'); -%>

    <div class="box" id="heading">
      <h1><%= title %></h1>
    </div>

    <div class="box">
      <% for(let i=0; i <items.length; i++){ %>
        <form action="/delete" method="POST">
          <div class="item">
            <input type="checkbox" name="checkbox" value= <%= items[i]._id %>  onchange="this.form.submit()"/>
            <p><%= items[i].name %> </p>
          </div> 
          <input type="hidden" name="list" value="<%= title %>"/>
        </form>
          <% } %>
        <form action="/" method="POST" class="item">
          <input type="text" name="todo" placeholder="New Item" />
          <button type="submit" name="list" value=<%= title %>>+</button>
        </form>
    </div>

    <%- include ('footer.ejs'); -%>